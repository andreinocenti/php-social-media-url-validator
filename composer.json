{
    "name": "andreinocenti/php-social-media-url-validator",
    "description": "PHP library for validating generic URLs and specific social media URLs, with ID extraction.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AndreInocenti\\SocialMediaUrlValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "tests/Pest.php"
        ]
    },
    "authors": [
        {
            "name": "Andre Inocenti",
            "email": "andreinocenti@gmail.com"
        }
    ],
    "require-dev": {
        "pestphp/pest": "^2.0"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
